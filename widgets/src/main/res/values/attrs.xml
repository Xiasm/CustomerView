<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LoadingButton">
        <attr name="widgetsLoadingButtonProgressSolidColor" format="color"/>
        <attr name="widgetsLoadingButtonProgressStrokeColor" format="color"/>
        <attr name="widgetsLoadingButtonProgressStrokeWidth" format="dimension"/>
        <attr name="widgetsLoadingButtonProgressRingColor" format="color"/>
        <attr name="widgetsLoadingButtonProgressRingWidth" format="dimension"/>
        <attr name="widgetsLoadingButtonSuccessIcon" format="reference"/>
    </declare-styleable>
    
    <declare-styleable name="CountdownView">
        <attr name="widgetsCountdownViewStrokeColor" format="color"/>
        <attr name="widgetsCountdownViewStrokeWidth" format="dimension"/>
        <attr name="widgetsCountdownViewLoadingColor" format="color"/>
        <attr name="widgetsCountdownViewLoadingWidth" format="dimension"/>
        <attr name="widgetsCountdownViewNumberColor" format="color"/>
        <attr name="widgetsCountdownViewNumberSize" format="dimension"/>
        <attr name="widgetsCountdownViewNumberSuffixText" format="string"/>
        <attr name="widgetsCountdownViewNumberSuffixColor" format="color"/>
        <attr name="widgetsCountdownViewNumberSuffixSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ChargingView">
        <attr name="widgetsChargingViewOutCircleColor" format="color"/>
        <attr name="widgetsChargingViewStrokeWidth" format="dimension"/>
        <attr name="widgetsChargingViewSpac" format="dimension"/>
        <attr name="widgetsChargingViewChargeLevelTextColor" format="color"/>
        <attr name="widgetsChargingViewChargeLevelTextSize" format="dimension"/>
        <attr name="widgetsChargingViewChargeLevelTopTextSize" format="dimension"/>
        <attr name="widgetsChargingViewChargeLevelTopTextColor" format="color"/>
        <attr name="widgetsChargingViewChargeLevelBottomTextSize" format="dimension"/>
        <attr name="widgetsChargingViewChargeLevelBottomTextColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="pickerview">
        <attr name="wheelview_gravity">
            <enum name="center" value="17"/>
            <enum name="left" value="3"/>
            <enum name="right" value="5"/>
        </attr>
        <attr name="wheelview_textSize" format="dimension"/>
        <attr name="wheelview_textColorOut" format="color"/>
        <attr name="wheelview_textColorCenter" format="color"/>
        <attr name="wheelview_dividerColor" format="color"/>
        <attr name="wheelview_lineSpacingMultiplier" format="float"/>
    </declare-styleable>

</resources>
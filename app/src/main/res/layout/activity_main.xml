<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xsm.customerview.MainActivity">

    <com.xsm.widgets.countdownView.CountdownView
        android:visibility="visible"
        android:id="@+id/countdownView"
        android:background="#121212"
        app:widgetsCountdownViewStrokeWidth="1dp"
        app:widgetsCountdownViewNumberSize="62dp"
        app:widgetsCountdownViewNumberColor="@android:color/white"
        app:widgetsCountdownViewNumberSuffixText="%"
        app:widgetsCountdownViewNumberSuffixColor="#AEAA9E"
        app:widgetsCountdownViewNumberSuffixSize="35dp"
        app:widgetsCountdownViewLoadingColor="@color/colorAccent"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <com.xsm.widgets.chargingview.ChargingView
        app:widgetsChargingViewOutCircleColor="#969696"
        app:widgetsChargingViewStrokeWidth="1dp"
        app:widgetsChargingViewSpac="3dp"
        android:layout_width="200dp"
        android:layout_height="200dp"/>
    <Button
        android:text="进入下一页"
        android:onClick="next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
